{
  "name": "@local/service",
  "private": true,
  "version": "1.0.0",
  "main": "dist/index.mjs",
  "type": "module",
  "scripts": {
    "clean": "rm -rf .turbo && rm -rf dist && rm -rf coverage && rm -rf src/generated && rm -rf src/proto",
    "build": "tsc && node ./esbuild.config.mjs",
    "build:watch": "yarn build --watch",
    "lint": "eslint --fix --max-warnings=0 ./src",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "start": "NODE_NO_WARNINGS=1 node ./dist/index.mjs",
    "watch": "NODE_NO_WARNINGS=1 node --watch --loader ts-node/esm ./src/index.mts",
    "trace": "NODE_NO_WARNINGS=1 OTEL_TRACE=true node --watch --loader ts-node/esm --import ./src/otlp-trace.mjs ./src/index.mts",
    "for-each": "yarn"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/response-validation": "^3.0.3",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@grpc/grpc-js": "^1.14.3",
    "@grpc/proto-loader": "^0.8.0",
    "@local/api": "workspace:^",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.211.0",
    "@opentelemetry/instrumentation-fastify": "^0.55.0",
    "@opentelemetry/instrumentation-http": "^0.211.0",
    "@opentelemetry/sdk-trace-node": "^2.5.0",
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "fastify": "^5.7.4",
    "fastify-openapi-glue": "^4.10.0",
    "graphql": "^16.12.0",
    "mercurius": "^16.7.0",
    "nanoid": "^5.1.6",
    "openapi-to-graphql": "^3.0.7",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "esbuild": "^0.27.3",
    "glob": "^13.0.1",
    "openapi-types": "^12.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
