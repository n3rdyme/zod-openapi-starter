{
  "name": "@local/service",
  "private": true,
  "version": "1.0.0",
  "main": "dist/index.mjs",
  "type": "module",
  "scripts": {
    "build": "tsc && node ./esbuild.config.mjs",
    "build:watch": "yarn build --watch",
    "lint": "eslint --fix --max-warnings=0 ./src",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "start": "node ./dist/index.mjs",
    "watch": "NODE_NO_WARNINGS=1 node --watch --loader ts-node/esm ./src/index.mts",
    "trace": "NODE_NO_WARNINGS=1 OTEL_SERVICE_NAME=local-service node --watch --loader ts-node/esm --import ./src/otlp-trace.mjs ./src/index.mts",
    "for-each": "yarn"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/response-validation": "^3.0.1",
    "@fastify/swagger": "^9.2.0",
    "@fastify/swagger-ui": "^5.1.0",
    "@local/api": "*",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.52.0",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.54.0",
    "@opentelemetry/instrumentation-fastify": "^0.41.0",
    "@opentelemetry/instrumentation-http": "^0.54.0",
    "@opentelemetry/sdk-trace-node": "^1.27.0",
    "ajv": "^8.0.1",
    "ajv-errors": "^3.0.0",
    "fastify": "^5.0.0",
    "fastify-openapi-glue": "^4.7.1",
    "nanoid": "^5.0.8",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.8.0",
    "esbuild": "^0.24.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.3"
  }
}
