{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "types": ["@types/node", "vitest/globals"]
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "dist"]
}
