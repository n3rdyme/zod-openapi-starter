{
  "name": "monorepo-root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "all": "yarn build && yarn format && yarn lint && yarn test",
    "preinstall": "echo $npm_execpath | grep -q yarn || (echo 'Please use yarn instead of npm, to install run:\nnpm i -g yarn\n' && exit 1)",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --log-level warn --write ./package.json ./packages/**/*.{json,ts,cjs,mjs,mts}",
    "test": "turbo run test",
    "watch": "yarn workspace @local/service watch",
    "for-each": "turbo run --concurrency 1 for-each --"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.13.0",
    "@eslint/migrate-config": "1.3.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.7.9",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitest/coverage-v8": "2.1.3",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.3",
    "yarn": "^1.22.22"
  },
  "resolutions": {
    "esbuild": "0.24.0"
  },
  "packageManager": "yarn@4.5.1"
}
